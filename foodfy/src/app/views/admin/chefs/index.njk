{% extends '../adminLayout.njk' %}

{% block content %}
  <div class="header-show">
    <h1>Gerenciar chefs</h1>

    <a href="/admin/chefs/create">Novo</a>
  </div>

  <main class="content-cards-chefs">
      {% for chef in chefs %}
        <article class="card-content-chefs">
          <img src="{{chef.avatar_url}}" alt="{{chef.name}}">

          <div class="card-content-info-chefs">
            <h2>{{chef.name}}</h2>
            <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
          </div>
        </article> 
      {% endfor %}
  </main>
{% endblock %}